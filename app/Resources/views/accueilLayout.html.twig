<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>{% block title %}Welcome Optimouv !{% endblock %}</title>

    {% block stylesheets %}
        <!-- Bootstrap Core CSS -->

        <link href="{{ asset('bundles/ffbb/accueil/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="{{ asset('bundles/ffbb/accueil/css/landing-page.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('bundles/ffbb/accueil/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"
              type="text/css">
        <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic"
              rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>

{% block body %}
    <div class="row" style="background-color: #e5e5e5">
        <div class="col-lg-2"> </div>
        <div class="col-lg-8">

            {% block menu %}
                <!-- Navigation -->
                <nav class="navbar navbar-default  topnav" role="navigation">
                    <div class="row">
                        <div class="col-lg-4">
                            <img src="{{ asset('bundles/ffbb/accueil/img/ffbb-logo.jpg') }}">
                        </div>
                        <div class="col-lg-4">
                            <img src="{{ asset('bundles/ffbb/accueil/img/Logo-Optimouv.jpg') }}" alt="optimouv"/>
                        </div>
                        <div class="col-lg-4">
                            <img src="{{ asset('bundles/ffbb/accueil/img/cop-ministere.png') }}" alt="cop21" style="float: right"/>
                        </div>

                    </div>
                    <!-- /.container -->
                </nav>
            {% endblock %}

            {% block slideshow %}
                <!-- Header -->
                <div class="intro-header" style="top:20px !important">
                    <div class="container">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="intro-message">


                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.container -->

                </div>
                <!-- /.intro-header -->
            {% endblock %}
            <!-- Page Content -->
            {% block content %}
            {% endblock %}

            <!-- /.banner -->

            <!-- Footer -->
            <footer>
                {% block footer %}
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4">
                                <img src="{{ asset('bundles/ffbb/accueil/img/CNOSF_LOGO_INSTITUTIONNEL.jpg') }}" width="65" height="65" alt="CNOSF"/>
                                <img src="{{ asset('bundles/ffbb/accueil/img/Ademe-info-energie.png') }}" width="65" height="65" alt="Ademe"/>
                                <img src="{{ asset('bundles/ffbb/accueil/img/WWF_logo.png') }}" width="65" height="65" alt="CNOSF"/>
                            </div>
                            <div class="col-lg-4">
                                <h5>Mentions l√©gales</h5>
                            </div>
                            <div class="col-lg-4">
                                <h5>Contact</h5>
                            </div>

                        </div>
                        <div class="row">
                            <p class="copyright text-muted small" style="text-align: center">Copyright &copy; Optimouv 2015. All
                                Rights
                                Reserved</p>

                        </div>
                    </div>
                {% endblock %}
            </footer>
        </div>
        <div class="col-lg-2"> </div>

    </div>

{% block javascripts %}
    <!-- jQuery -->
    <script src="{{ asset('bundles/ffbb/accueil/js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/ffbb/accueil/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% endblock %}
</body>

</html>
