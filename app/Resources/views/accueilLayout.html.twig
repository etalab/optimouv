        <![endif]-->

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>

{% block body %}

{% block menu %}
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="row">
                <div class="col-lg-4">
                    <img src="{{ asset('bundles/ffbb/accueil/img/ffbb-logo.jpg') }}">
                </div>
                <div class="col-lg-4">
                    <img src="{{ asset('bundles/ffbb/accueil/img/Logo-Optimouv.jpg') }}" alt="optimouv"/>
                </div>
                <div class="col-lg-4">
                    <img src="{{ asset('bundles/ffbb/accueil/img/cop-ministere.png') }}" alt="cop21" style="float: right"/>
                </div>

            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->

            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
{% endblock %}

{% block slideshow %}
    <!-- Header -->
    <div class="intro-header" style="top:20px !important">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">


                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->
{% endblock %}
    <!-- Page Content -->
    {% block content %}
    {% endblock %}

    <!-- /.banner -->

    <!-- Footer -->
    <footer>
        {% block footer %}
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <img src="{{ asset('bundles/ffbb/accueil/img/CNOSF_LOGO_INSTITUTIONNEL.jpg') }}" width="65" height="65" alt="CNOSF"/>
                        <img src="{{ asset('bundles/ffbb/accueil/img/Ademe-info-energie.png') }}" width="65" height="65" alt="Ademe"/>
                        <img src="{{ asset('bundles/ffbb/accueil/img/WWF_logo.png') }}" width="65" height="65" alt="CNOSF"/>
                    </div>
                    <div class="col-lg-4">
                        <h5>Mentions l√©gales</h5>
                    </div>
                    <div class="col-lg-4">
                        <h5>Contact</h5>
                    </div>

                </div>
                <div class="row">
                    <p class="copyright text-muted small" style="text-align: center">Copyright &copy; Optimouv 2015. All
                        Rights
                        Reserved</p>

                </div>
            </div>
        {% endblock %}
    </footer>
{% block javascripts %}
    <!-- jQuery -->
    <script src="{{ asset('bundles/ffbb/accueil/js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/ffbb/accueil/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% endblock %}
</body>

</html>
