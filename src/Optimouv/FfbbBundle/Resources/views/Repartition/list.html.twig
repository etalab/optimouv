{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}


    <div id="page-wrapper">

        <div class="row">
            <div class="bs-example">
                <ul class="breadcrumb">
                    <li><a href="{{ path('administration_panel') }}">Administration</a></li>
                    <li class="active">Liste de disciplines</li>
                </ul>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Gérer la liste des disciplines</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste des disciplines

                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed"
                                       id="tableFede">
                                    <thead>
                                    <tr>
                                        {#<th>No</th>#}
                                        <th>Designation </th>
                                        <th>Date de création</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for categorie in categories %}
                                        <tr id="{{ categorie.id }}">
                                            <td> {{ categorie.designation }} </td>
                                            <td> {{ categorie.dateCreation.date|date('d/m/Y') }} </td>


                                            <td>
                                                <a href="{{ path('ffbb_repartition_update', {idCategorie:categorie.id }) }}" class="btn btn-consulter-user">Editer</a>
                                                <button type="button" name="delete" class="btn btn-consulter-user" onclick="deleteCategorie({{ categorie.id }})">Supprimer</button>

                                            </td>


                                        </tr>


                                    {% endfor %}


                                    </tbody>

                                </table>
                                <a href="{{ path('ffbb_repartition_add') }}" class="btn btn-consulter-user-dark">Ajouter</a>
                                <a href="javascript:history.back()" class="pull-right btn btn-consulter-user ">Retour</a>

                            </div>
                        </div>
                        <!-- /.table-responsive -->


                    </div>

                </div>
            </div>
        </div>


    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('#tableFede').DataTable({
                responsive: true,
                "order": [[ 0, "desc" ]]
            });

        });

        function deleteCategorie(idCategorie){
            $.ajax({
                url: '/admin/repartition-homogene/delete/' +idCategorie,
                type: 'GET',
                data: null,
                contentType: false,
                dataType : "json",
                processData: false,
                success: function(data, textStatus, jqXHR)
                {
                    console.log(data);
                    if(typeof data.success)
                    {
                        deletedCategorieRow = '#' + idCategorie;

                        $(deletedCategorieRow).remove();


                    }
                    else
                    {
                        // Handle errors here

                    }
                },
                error: function(jqXHR, textStatus, errorThrown)
                {
                    // Handle errors here

                }
            });
        }


    </script>
{% endblock %}



