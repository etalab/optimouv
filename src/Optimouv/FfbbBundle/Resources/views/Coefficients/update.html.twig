{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

             <div class="row">
                 <div class="bs-example">
                     <ul class="breadcrumb">
                         <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                         <li><a href="{{ path('administration_panel') }}">Administration</a></li>
                         <li><a href="{{ path('ffbb_coefficients_list') }}">Liste de coefficients</a></li>
                         <li class="active">Mise à jour d'un coefficient</li>
                     </ul>
                 </div>
                 <div class="col-lg-12">
                     <h3 class="page-header">Editer un coefficient </h3>
                     <h5 style="text-align: right; font-weight: bold">(* champs obligatoires)</h5>
                 </div>
                 <!-- /.col-lg-12 -->
             </div>
             <!-- /.row -->

             <div class="row">
                 <div class="col-lg-6">
                     <form role="form" action="{{ path('ffbb_coefficients_update_coef') }}" method="post">



                         <div class="form-group">
                             <label style="font-weight: bold">Désignation *</label>
                             <input class="form-control" name="code" value="{{ reference.code }}" required>
                         </div>

                         <div class="form-group">
                             <label style="font-weight: bold">Valeur *</label>
                             <input class="form-control" name="coefficient" value="{{ reference.valeur }}" required>
                         </div>
                         <input type="hidden" name="idReference" value="{{ reference.id }}">



                         <button type="submit" class="btn btn-consulter-user-dark">Enregistrer</button>
                         <a href="javascript:history.back()" class="btn btn-consulter-user ">Annuler</a>
                     </form>

                 </div>


             </div>


         </div>

     {% endblock %}