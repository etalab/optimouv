{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}


    <div id="page-wrapper">

        <div class="row">
            <div class="bs-example">
                <ul class="breadcrumb">
                    <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                    <li><a href="{{ path('administration_panel') }}">Administration</a></li>
                    <li class="active">Liste de coefficients</li>
                </ul>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Gérer la liste des coefficients</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste des coefficients (coût des parcours)

                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed"
                                       id="tableFede">
                                    <thead>
                                    <tr>
                                        <th>Designation </th>
                                        <th>Valeur (en euros)</th>
                                        <th>Date de création</th>
                                        <th>Date de modification</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for coefficient in coefficients|slice(0,3) %}
                                        <tr id="{{ coefficient.id }}">
                                            <td> {{ coefficient.code }} </td>
                                            <td> {{ coefficient.valeur }} </td>
                                            <td> {{ coefficient.dateCreation.date|date('d/m/Y') }} </td>
                                            <td>

                                                {% if coefficient.dateModification is null %}
                                                -
                                                {% else %}
                                                {{ coefficient.dateModification.date|date('d/m/Y') }} </td>
                                            {% endif %}


                                            <td>
                                                <a href="{{ path('ffbb_coefficients_update', {idReference: coefficient.id }) }}" class="btn btn btn-info">Editer</a>

                                            </td>


                                        </tr>


                                    {% endfor %}


                                    </tbody>

                                </table>

                                {#<a href="{{ path('ffbb_repartition_add') }}" class="btn btn-consulter-user-dark">Ajouter</a>#}
                                <a href="javascript:history.back()" class="pull-right btn btn btn-info ">Retour</a>

                            </div>
                        </div>
                        <!-- /.table-responsive -->


                    </div>

                </div>
            </div>
        </div>

        {# coefficients des GES #}

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste des coefficients (émissions GES)

                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed"
                                       id="tableGes">
                                    <thead>
                                    <tr>
                                        <th>Designation </th>
                                        <th>Valeur (en Kg eq CO2)</th>
                                        <th>Date de création</th>
                                        <th>Date de modification</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for coefficient in coefficients|slice(3,3) %}
                                        <tr id="{{ coefficient.id }}">
                                            <td> {{ coefficient.code }} </td>
                                            <td> {{ coefficient.valeur }} </td>
                                            <td> {{ coefficient.dateCreation.date|date('d/m/Y') }} </td>
                                            <td>

                                                {% if coefficient.dateModification is null %}
                                                -
                                                {% else %}
                                                {{ coefficient.dateModification.date|date('d/m/Y') }} </td>
                                            {% endif %}


                                            <td>
                                                <a href="{{ path('ffbb_coefficients_update', {idReference: coefficient.id }) }}" class="btn btn btn-info">Editer</a>

                                            </td>


                                        </tr>


                                    {% endfor %}


                                    </tbody>

                                </table>

                                {#<a href="{{ path('ffbb_repartition_add') }}" class="btn btn-consulter-user-dark">Ajouter</a>#}
                                <a href="javascript:history.back()" class="pull-right btn btn btn-info ">Retour</a>

                            </div>
                        </div>
                        <!-- /.table-responsive -->


                    </div>

                </div>
            </div>
        </div>


    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('#tableFede').DataTable({
                responsive: true,
                "order": [[ 0, "asc" ]]
            });

        });

        $(document).ready(function () {
            $('#tableGes').DataTable({
                responsive: true,
                "order": [[ 0, "asc" ]]
            });

        });



    </script>
{% endblock %}



