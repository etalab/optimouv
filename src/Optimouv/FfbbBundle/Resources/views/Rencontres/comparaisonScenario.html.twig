{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">Comparez vos scénarios</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <a href="javascript:history.back()" class="pull-right btn btn-default-rencontre ">Retour aux scénario </a>
         </div>
    </div>

    <br>

    {# tableau distances + durees#}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Kilomètres à parcourir et temps de parcours pour vos scénarios </h4>
                </div>

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div class="span3">
                        <table class="table table-striped table-hover table-bordered table-fixed" id="tableDistance" >
                            <thead>

                            <tr style="text-align: left">
                                <th rowspan="2" style="text-align:center; vertical-align: middle; width: 20%">Participants
                                </th>
                                <th colspan="2">Kms à parcourir</th>
                                <th colspan="2" >Temps de parcours (J H:M)</th>

                            </tr>

                            <tr style="text-align: left">
                               <th  style="vertical-align: middle; ">Scénario optimal</th>
                               <th  style="vertical-align: middle; ">Scénario équitable</th>
                               <th  style="vertical-align: middle;">Scénario optimal</th>
                               <th  style="vertical-align: middle;">Scénario équitable</th>
                            </tr>

                            </thead>


                            <tbody>
                            {% for participant in participants %}
                                <tr>



                                    <td> {{ participant.ville }}</td>
                                    <td style="text-align: right">{{ (participant.distance/1000)|round|number_format(0, ',', ' ') }}</td>
                                    <td style="text-align: right">{{ (participant.distanceEq/1000)|round|number_format(0, ',', ' ')  }}</td>


                                     {#récupérer le nbr d heure#}
                                    {% set nbrHeure = (participant.duree/3600)|round %}
                                    {% if nbrHeure <10 %}
                                        {% set nbrHeure = "0"~nbrHeure %}
                                    {% endif %}

                                     {#récupérer le nbr de minute#}
                                    {% set nbrMin = ((participant.duree%3600)/60)|round %}
                                    {% if nbrMin <10 %}
                                        {% set nbrMin = "0"~nbrMin %}
                                    {% endif %}

                                    <td style="text-align: center"> {{ nbrHeure }}:{{ nbrMin }}</td>

                                     {#récupérer le nbr d heure#}
                                    {% set nbrHeureEq = (participant.dureeEq/3600)|round %}
                                    {% if nbrHeureEq <10 %}
                                        {% set nbrHeureEq = "0"~nbrHeureEq %}
                                    {% endif %}

                                     {#récupérer le nbr de minute#}
                                    {% set nbrMinEq = ((participant.dureeEq%3600)/60)|round %}
                                    {% if nbrMinEq <10 %}
                                        {% set nbrMinEq = "0"~nbrMinEq %}
                                    {% endif %}


                                    <td style="text-align: center"> {{ nbrHeureEq }}:{{ nbrMinEq }}</td>
                                </tr>

                            {% endfor %}

                           </tbody>

                        </table>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <a class="pull-right btn btn-default-rencontre ">Exporter</a>
                            </div>
                        </div>


                    </div>
                    <!-- /.table-responsive -->
                </div>

            </div>
        </div>
    </div>

    <br>
    {# tableau coût distances #}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Coût du parcours</h4>
                </div>

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div class="span3">
                            <table class="table table-striped table-hover table-bordered table-fixed" id="tableCout" >
                                <thead>
                                <tr style="text-align: left">
                                    <th rowspan="2" style="text-align:center; vertical-align: middle; width: 10%">Participants</th>
                                    <th colspan="2" style="width: 20% " >Coût du parcours en voiture (€) </th>
                                    <th colspan="2" style=" width: 20% ">Coût du parcours en covoiturage (€) </th>
                                    <th colspan="2" style=" width: 20% ">Coût du parcours en minibus (€) </th>
                                </tr>
                                <tr>
                                    <th  style=" vertical-align: middle; ">Scénario optimal</th>
                                    <th  style=" vertical-align: middle; ">Scénario équitable</th>
                                    <th  style=" vertical-align: middle;">Scénario optimal</th>
                                    <th  style=" vertical-align: middle;">Scénario équitable</th>
                                    <th  style="vertical-align: middle; ">Scénario optimal</th>
                                    <th  style="vertical-align: middle; ">Scénario équitable</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for participant in participants %}
                                {% set distanceOp = participant.distance/1000  %}
                                {% set distanceEq = participant.distanceEq/1000 %}
                                <tr>
                                    <td> {{ participant.ville }}</td>
                                    <td style="text-align: right">{{ (distanceOp  * participant.nbrParticipants * 0.80)|round|number_format(0, ',', ' ') }}</td>
                                    <td style="text-align: right">{{ (distanceEq  * participant.nbrParticipants * 0.80)|round|number_format(0, ',', ' ') }}</td>
                                    <td style="text-align: right">{{ (distanceOp  * participant.nbrParticipants /4 * 0.80)|round|number_format(0, ',', ' ') }} </td>
                                    <td style="text-align: right">{{ (distanceEq  * participant.nbrParticipants /4 * 0.80)|round|number_format(0, ',', ' ') }} </td>
                                    <td style="text-align: right">{{ (distanceOp  * participant.nbrParticipants /9 * 1.31)|round|number_format(0, ',', ' ') }} </td>
                                    <td style="text-align: right">{{ (distanceEq  * participant.nbrParticipants /9 * 1.31)|round|number_format(0, ',', ' ') }} </td>
                                </tr>
                                {% endfor %}

                                </tbody>

                            </table>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <a class="pull-right btn btn-default-rencontre ">Exporter</a>
                            </div>
                        </div>


                    </div>
                    <!-- /.table-responsive -->
                </div>

            </div>
        </div>
    </div>

    {# tableau GES #}
    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Emissions de GES</h4>
                </div>

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div class="span3">
                            <table class="table table-striped table-hover table-bordered table-fixed" id="tableEmission" >
                                <thead>
                                <tr style="text-align: left">
                                    <th rowspan="2" style="text-align:center; vertical-align: middle; width: 10%">Participants</th>

                                        <th colspan="2" style="width: 20% ">Emissions GES en voiture individuelle (en KG eq CO2)</th>
                                        <th colspan="2" style="width: 20% ">Emissions GES en covoiturage (en KG eq CO2)</th>
                                        <th colspan="2" style="width: 20% ">Emissions GES en minibus (en KG eq CO2)</th>
                                </tr>
                                <tr style="text-align: left">
                                    <th  style="vertical-align: middle; ">Scénario optimal</th>
                                    <th  style="vertical-align: middle; ">Scénario équitable</th>
                                    <th  style="vertical-align: middle;">Scénario optimal</th>
                                    <th  style="vertical-align: middle;">Scénario équitable</th>
                                    <th style="vertical-align: middle; ">Scénario optimal</th>
                                    <th  style="vertical-align: middle; ">Scénario équitable</th>
                                </tr>

                                </thead>


                                <tbody>

                                {% for participant in participants %}
                                    {% set distanceOp = participant.distance/1000  %}
                                    {% set distanceEq = participant.distanceEq/1000 %}
                                    <tr>
                                        <td> {{ participant.ville }}</td>
                                        <td style="text-align: right">{{ (distanceOp  * participant.nbrParticipants * 0.157)|round|number_format(0, ',', ' ') }}</td>
                                        <td style="text-align: right">{{ (distanceEq  * participant.nbrParticipants * 0.157)|round|number_format(0, ',', ' ') }}</td>
                                        <td style="text-align: right">{{ ((distanceOp * participant.nbrParticipants /4) * 0.157)|round|number_format(0, ',', ' ') }} </td>
                                        <td style="text-align: right">{{ ((distanceEq * participant.nbrParticipants /4) * 0.157)|round|number_format(0, ',', ' ') }} </td>
                                        <td style="text-align: right">{{ ((distanceOp * participant.nbrParticipants /9) * 0.185)|round|number_format(0, ',', ' ') }} </td>
                                        <td style="text-align: right">{{ ((distanceEq * participant.nbrParticipants /9) * 0.185)|round|number_format(0, ',', ' ') }} </td>
                                    </tr>
                                {% endfor %}

                                </tbody>

                            </table>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <a class="pull-right btn btn-default-rencontre ">Exporter</a>
                            </div>
                        </div>


                    </div>
                    <!-- /.table-responsive -->
                </div>

            </div>
        </div>
    </div>

</div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
    $(document).ready(function() {
        // responsive table distance
        $('#tableDistance').DataTable({
            responsive: true
        });

        // responsive table distance
        $('#tableCout').DataTable({
            responsive: true,
            "autoWidth": false
        });

        // responsive table distance
        $('#tableEmission').DataTable({
            responsive: true,
            "autoWidth": false
        });
    });

    </script>
{% endblock %}






