{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

             <div class="row">
                 <div class="bs-example">
                     <ul class="breadcrumb">
                         <li><a href="{{ path('administration_panel') }}">Administration</a></li>
                         <li ><a href="{{ path('ffbb_federation_list') }}">Liste des fédérations</a></li>
                         <li class="active">Ajout de fédération</li>
                     </ul>
                 </div>
                 <div class="col-lg-12">
                     <h3 class="page-header">Ajouter une fédération </h3>
                     <hr>
                     <h5 style="text-align: right; font-weight: bold">(* champs obligatoires)</h5>
                 </div>
                 <!-- /.col-lg-12 -->
             </div>
             <!-- /.row -->

             <div class="row">
                 <div class="col-lg-6">
                     <form role="form" action="{{ path('ffbb_federation_add_fede') }}" method="post">

                         <div class="form-group">
                             <label style="font-weight: bold">Nom *</label>
                             <input class="form-control" name="nom" required>
                         </div>

                         <div class="form-group">
                             <label  style="font-weight: bold">Désignation *</label>
                             <input class="form-control" name="designation" required>
                         </div>

                         <button type="submit" class="btn btn-ajouter-fede">Enregistrer</button>
                         <a href="javascript:history.back()" class=" btn btn-consulter-rapport ">Annuler</a>
                     </form>

                 </div>

             </div>
         </div>

     {% endblock %}