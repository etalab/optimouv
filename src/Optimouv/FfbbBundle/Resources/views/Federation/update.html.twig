{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

             <div class="row">
                 <div class="bs-example">
                     <ul class="breadcrumb">
                         <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                         {#<li><a href="{{ path('ffbb_choisir_liste_participants') }}">Choix de listes</a></li>#}
                         {#<li><a href="{{ path('ffbb_choisir_groupe', {'idListe': idListe}) }}">Choix de groupes</a></li>#}
                         {#<li><a href="{{ path('ffbb_gerer_groupe', {'idListe': idListe}) }}">Gestion de groupes</a></li>#}
                         <li class="active">Mise à jour de fédération</li>
                     </ul>
                 </div>
                 <div class="col-lg-12">
                     <h3 class="page-header">Editer une fédération </h3>
                     <h5 style="text-align: right; font-weight: bold">(* champs obligatoires)</h5>
                 </div>
                 <!-- /.col-lg-12 -->
             </div>
             <!-- /.row -->

             <div class="row">
                 <div class="col-lg-6">
                     <form role="form" action="{{ path('ffbb_federation_update_fede') }}" method="post">
                         <input type="hidden" name="idFede" value="{{ idFede }}">

                         <div class="form-group">
                             <label style="font-weight: bold">Nom </label>
                             <input class="form-control" name="nom" value="{{ nom }}" required>
                         </div>

                         <div class="form-group">
                             <label  style="font-weight: bold">Désignation </label>
                             <input class="form-control" name="designation" value="{{ designation }}" required>
                         </div>

                         <button type="submit" class="btn btn-default-rencontre">Enregistrer</button>
                         <a href="javascript:history.back()" class="pull-right btn btn-default-rencontre ">Annuler</a>
                     </form>

                 </div>


             </div>


         </div>

     {% endblock %}