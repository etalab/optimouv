{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}

    <div id="page-wrapper">

        <div class="row">
            <div class="bs-example">
                <ul class="breadcrumb">
                    <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                    <li><a href="{{ path('ffbb_poules_choisir_liste') }}">Optimisation des poules</a></li>
                    <li><a href="{{ path('ffbb_poule_choisir_groupe', {'idListe': idListe}) }}">Votre sélection</a></li>
                    <li><a href="{{ path('ffbb_poules_gerer_groupe', {'idListe': idListe}) }}">Gestion des sélections</a></li>
                    <li class="active">Visualisation sélection</li>
                </ul>
            </div>
            <div class="col-lg-12">
                <h3 class="page-header">Visualisation des fichiers</h3>
                <h4>Nom du fichier : {{ nomListe }}</h4>
                <h4>Nom de la sélection : {{ nomGroupe }}</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Votre sélection
                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed" id="tableEntitesGroupe" >
                                    <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Code Postal</th>
                                        <th>Ville</th>
                                    </tr>
                                    </thead>


                                    <tbody>
                                    {% for detailsEntite in detailsEntites %}
                                        <tr id="{{ detailsEntite.id }}">
                                            <td> {{ detailsEntite.nom }}</td>
                                            <td> {{ detailsEntite.codePostal }}</td>
                                            <td> {{ detailsEntite.ville }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.table-responsive -->


                        <div class="row">
                            <div class="col-lg-12"> <a href="javascript:history.back()" class="pull-right btn btn-primary ">Retour</a></div>
                        </div>

                    </div>

                </div>
            </div>
        </div>





    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- code interne dual list box -->
    <script>
        $(document).ready(function() {
            $('#tableEntitesGroupe').DataTable({
                responsive: true
            });
        });

    </script>
{% endblock %}






