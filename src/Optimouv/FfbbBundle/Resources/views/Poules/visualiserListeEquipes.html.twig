{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}

<div id="page-wrapper">

    <div class="row">
        <div class="bs-example">
            <ul class="breadcrumb">
                <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                <li><a href="{{ path('ffbb_poules_choisir_liste') }}">Choix de la liste d'équipes</a></li>
                <li><a href="{{ path('ffbb_poules_gerer_liste') }}">Gestion de la liste d’équipes</a></li>
                <li class="active">Visualisation de la liste d'équipes</li>
            </ul>
        </div>
        <div class="col-lg-12">
            <h3 class="page-header">Liste des équipes </h3>
            <h4>{{ nomListe }}</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Vos participants
                </div>

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div class="span3">
                        <table class="table table-striped table-hover table-bordered table-fixed" id="tableEntitesListeParticipants" >
                            <thead>
                                <tr>

                                        <th>Nom</th>
                                        <th>Code Postal</th>
                                        <th>Ville</th>
                                        <th>Participants</th>
                                        <th>Lieu de Rencontre Possible</th>
                                        <th>Adresse</th>
                                        <th>Longitude</th>
                                        <th>Latitude</th>
                                        <th>Système de Projection Géographique</th>
                                        <th>Licenciés</th>
                                        <th>Poule</th>


                                </tr>
                            </thead>


                            <tbody>
                            {% for detailsEntite in detailsEntites %}
                                <tr id="{{ detailsEntite.id }}">

                                        <td> {{ detailsEntite.nom }}</td>
                                        <td> {{ detailsEntite.codePostal }}</td>
                                        <td> {{ detailsEntite.ville }}</td>
                                        <td> {{ detailsEntite.participants }}</td>

                                        {% if detailsEntite.lieuRencontrePossible  %}
                                            <td> OUI </td>
                                        {% else %}
                                            <td> NON </td>
                                        {% endif %}

                                        <td> {{ detailsEntite.adresse }}</td>

                                        {% if detailsEntite.longitude  %}
                                            <td> {{ detailsEntite.longitude   }} </td>
                                        {% else %}
                                            <td> </td>
                                        {% endif %}

                                        {% if detailsEntite.latitude  %}
                                            <td> {{ detailsEntite.latitude   }} </td>
                                        {% else %}
                                            <td> </td>
                                        {% endif %}

                                        <td> {{ detailsEntite.projection }}</td>

                                        {% if detailsEntite.licencies  %}
                                            <td> {{ detailsEntite.licencies   }} </td>
                                        {% else %}
                                            <td> </td>
                                        {% endif %}
                                       <td> {{ detailsEntite.poule   }}</td>



                                </tr>
                            {% endfor %}

                            </tbody>

                        </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->


                    <div class="row">
                        <div class="col-lg-12"> <a href="{{ path('ffbb_poules_gerer_liste') }}" class="pull-right btn btn-primary ">Retour à la liste</a></div>
                    </div>

                </div>

            </div>
        </div>
    </div>





</div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
    $(document).ready(function() {
        $('#tableEntitesListeParticipants').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}






