                             console.log(data);
                             if(typeof data.success)
                             {
                                 deletedGroupDiv = '#' + idListeParticipants;

                                 $(deletedGroupDiv).remove();


                             }
                             else
                             {
                                 // Handle errors here

                             }
                         },
                         error: function(jqXHR, textStatus, errorThrown)
                         {
                             // Handle errors here

                         }
                     });
                 }
             </script>
         {% endblock %}


     {% endblock %}






