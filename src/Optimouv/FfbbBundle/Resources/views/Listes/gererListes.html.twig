                         url: 'supprimer-liste-lieux/' +idListeLieux,
                         type: 'GET',
                         data: null,
                         contentType: false,
                         dataType : "json",
                         processData: false,
                         success: function(data, textStatus, jqXHR)
                         {
                             console.log(data);
                              if(typeof data.success)
                             {
                                 deletedGroupDiv = '#' + idListeLieux;

                                 $(deletedGroupDiv).remove();


                             }
                             else
                             {
                                 // Handle errors here

                             }
                         },
                         error: function(jqXHR, textStatus, errorThrown)
                         {
                             // Handle errors here

                         }
                     });
                 }

