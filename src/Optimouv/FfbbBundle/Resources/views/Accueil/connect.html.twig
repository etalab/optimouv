{% extends '::accueilLayout.html.twig' %}

{% block slideshow %}
    <div>
        <div class="row" style="min-height: 300px; width: 100%; margin-left: 0px;">
            <img src="{{ asset('bundles/ffbb/images/ca_marche_connectee.jpg') }}" style="width: 100%">
        </div>

    </div>
{% endblock %}

{% block content %}
    <div class="content-section-b" style="background-color: #FFFFFF">


        <div class="row" style="min-height: 200px">
            <div style="position:relative; float:left; background-color: #01a2bb; border-radius: 5px; width: 30%; min-height: 150px">
                <a href="{{ path('ffbb_poules_choisir_liste') }}" style="text-decoration: none;">
                    <div style="text-align: center; padding-top:10px">
                        <img src="{{ asset('bundles/ffbb/accueil/img/trophy36.png') }}" alt="utilisateurs optimouv"
                             width="20%" height="20%"/>
                    </div>
                    <div style=" text-align: center; color:#fff">
                        <h3>Optimisation des poules </h3>
                    </div>
                </a>

            </div>

            <div style="position:relative; float:left;background-color: #babe11; border-radius: 5px; width: 30%; margin-left: 5%; min-height: 150px">
                <a href="{{ path('ffbb_choisir_liste_participants') }}" style="text-decoration: none;">
                    <div style="text-align: center; padding-top:10px">
                        <img src="{{ asset('bundles/ffbb/accueil/img/pin66.png') }}"
                             alt="Meilleur lieu de rencontre" width="20%" height="20%"/>
                    </div>
                    <div style=" text-align: center; color:#fff">
                        <h3>Meilleur lieu de rencontre</h3>
                    </div>
                </a>
            </div>


            <div style="position:relative; float:right;background-color: #f07800; border-radius: 5px; width: 30%; min-height: 150px">
                <a href="{{ path('ffbb_rapports') }}" style="text-decoration: none;">
                    <div style="text-align: center; padding-top:10px">
                        <img src="{{ asset('bundles/ffbb/accueil/img/chart42.png') }}" alt="Rapports" width="20%"
                             height="20%"/>
                    </div>
                    <div style=" text-align: center; color:#fff">
                        <h3>Rapports </h3>
                    </div>
                </a>
            </div>

        </div>

        <!-- /.container -->

        <!-- partie administration -->
        {% set userConnect = app.user.roles %}

        {% if ('ROLE_ADMIN' in userConnect) or ('ROLE_SUPER_ADMIN' in userConnect) %}
            <div class="row" style="min-height: 200px">
                <div style="position:relative; float:left; background-color: #4E4646; border-radius: 5px; width: 30%; min-height: 150px">
                    <a href="{{ path('administration_panel') }}" style="text-decoration: none;">
                        <div style="text-align: center; padding-top:10px">
                            {#<img src="{{ asset('bundles/ffbb/accueil/img/trophy36.png') }}" alt="utilisateurs optimouv"#}
                            {#width="20%" height="20%"/>#}
                            <i class="fa fa-cogs fa-5x" style="color: #fff;"></i>
                        </div>
                        <div style=" text-align: center; color:#fff">
                            <h3>Administration </h3>
                        </div>
                    </a>

                </div>

                <div style="position:relative; float:left;background-color: #777171; border-radius: 5px; width: 30%; margin-left: 5%; min-height: 150px">
                    <a href="{{ path('ffbb_statistiques_index') }}" style="text-decoration: none;">
                    {#<a href="#" style="text-decoration: none;">#}
                        <div style="text-align: center; padding-top:10px">
                            <i class="fa fa-bar-chart fa-5x" style="color: #fff;"></i>
                        </div>
                        <div style=" text-align: center; color:#fff">
                            <h3>Statistiques</h3>
                        </div>
                    </a>
                </div>

            </div>
        {% endif %}


    </div>


    <!-- /.content-section-b -->
{% endblock %}
