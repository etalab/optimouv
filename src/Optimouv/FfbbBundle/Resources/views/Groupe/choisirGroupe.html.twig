{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

              <div class="row">
                 <div class="col-lg-12">
                     <div class="panel panel-default">
                         {% if tousLesGroupes is empty %}


                             <div class="panel-heading">
                                 <h4> La liste que vous avez selectionnée ne contient pas de groupe. Veuillez sélectionner une nouvelle liste.</h4>
                                 <a href="{{ path('ffbb_choisir_liste_participants') }}" class="btn btn-default">Retour à la liste</a>
                             </div>
                         {% else %}

                         <div class="panel-heading">
                             Sélectionnez un groupe de participants
                         </div>
                         <!-- /.panel-heading -->
                         <div class="panel-body">
                             <div class="dataTable_wrapper">

                                         <table class="table table-striped table-bordered table-hover" id="tableChoisirGroupe">
                                             <thead>
                                             <tr>
                                                 <th>Identifiant </th>
                                                 <th>Nom</th>
                                                 <th>Nombre de participants</th>
                                                 <th>Date de création</th>
                                                 <th>Action</th>
                                             </tr>
                                             </thead>
                                             <tbody id="listeGroupes">
                                             {% for groupe in tousLesGroupes %}
                                                 <tr id="{{ groupe.id }}">
                                                     <td> {{ groupe.id }}</td>
                                                     <td> {{ groupe.nom }}</td>
                                                     <td> {{ groupe.nbParticipants }}</td>
                                                     <td> {{ groupe.dateCreation|date('d/m/Y') }}</td>
                                                     <td>
                                                         <a href="{{ path('ffbb_villes_groupe', {'idGroupe': groupe.id}) }}" class="btn btn-info">Lancer</a>

                                                     </td>

                                                 </tr>

                                             {% endfor %}


                                             </tbody>
                                         </table>
                                 <form action="{{ path('ffbb_gerer_groupe', {'idListe': idListe}) }}" method="post">

                                     <button type="submit" class="btn btn-default">Gérer mes groupes</button>
                                     <a href="{{ path('ffbb_choisir_liste_participants') }}" class="btn btn-info">Retour</a>

                                 </form>

                             </div>
                             <!-- /.table-responsive -->

                         </div>
                         <!-- /.panel-body -->
                         {% endif %}
                     </div>
                     <!-- /.panel -->
                 </div>
                 <!-- /.col-lg-12 -->
             </div>

         </div>



     {% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" charset="UTF-8">
        $(document).ready(function() {
            $('#tableChoisirGroupe').DataTable({
            responsive: true
            });
        });
</script>
{% endblock %}




