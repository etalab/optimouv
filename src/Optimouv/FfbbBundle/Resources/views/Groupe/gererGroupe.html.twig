{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

              <div class="row">
                  <div class="bs-example">
                      <ul class="breadcrumb">
                          <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                          <li><a href="{{ path('ffbb_choisir_liste_participants') }}">Choix de listes</a></li>
                          <li><a href="{{ path('ffbb_choisir_groupe', {'idListe': idListe}) }}">Choix de groupes</a></li>
                          <li class="active">Gestion de groupes</li>
                      </ul>
                  </div>
                 <div class="col-lg-12">
                     <div class="panel panel-default">
                         <div class="panel-heading">
                             Gérez vos groupes de participants
                         </div>
                         <!-- /.panel-heading -->
                         <div class="panel-body">
                             <div class="dataTable_wrapper">
                                 {% set basePath =  app.request.getBasePath() %}

                                 <table class="table table-striped table-bordered table-hover" id="tableGererGroupe">
                                     <thead>
                                     <tr>
                                         <th>Identifiant </th>
                                         <th>Nom</th>
                                         <th>Nombre de participants</th>
                                         <th>Date de création</th>
                                         <th>Action</th>
                                      </tr>
                                     </thead>
                                     <tbody id="listeGroupes">
                                     {% for groupe in tousLesGroupes %}

                                         <tr id="{{ groupe.id }}">

                                             <td> {{ groupe.id }}</td>
                                             <td> {{ groupe.nom }}</td>
                                             <td> {{ groupe.nbParticipants }}</td>
                                             <td> {{ groupe.dateCreation|date('d/m/Y') }}</td>
                                             <td>
                                                 <a href="{{ path('ffbb_renommer_groupe',{'idGroupe': groupe.id}) }}" class="btn btn-info">Renommer</a> |
                                                 <button type="button" class="btn btn-info" onclick="deleteGroupe({{ groupe.id }})">Supprimer</button> |
                                                 <a href="{{ path('ffbb_entite',{'idGroupe': groupe.id}) }}" class="btn btn-info">Ajouter entité</a> |
                                                 <a href="{{ path('ffbb_villes_groupe', {'idGroupe': groupe.id}) }}" class="btn btn-info">Lancer</a> |
                                                 <a href="{{ path('ffbb_visualiser_groupe', {'idGroupe': groupe.id}) }}" class="btn btn-info">Visualiser</a>


                                             </td>

                                         </tr>

                                     {% endfor %}

                                     </tbody>
                                 </table>
                                 <form action="{{ path('ffbb_choisir_groupe', {'idListe': idListe}) }}" method="post">

                                     <button type="submit" class="btn btn-default">Retour à la liste de groupes</button>
                                 </form>
                               </div>
                             <!-- /.table-responsive -->

                         </div>
                         <!-- /.panel-body -->
                     </div>
                     <!-- /.panel -->
                 </div>
                 <!-- /.col-lg-12 -->
             </div>

         </div>





     {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- code interne dual list box -->
    <script type="text/javascript" charset="UTF-8">


        function deleteGroupe(idGroupe){
            $.ajax({
                url: '/admin/rencontre/supprimer-groupe/' +idGroupe,
                type: 'GET',
                data: null,
                contentType: false,
                dataType : "json",
                processData: false,
                success: function(data, textStatus, jqXHR)
                {
                    console.log(data);
                    if(typeof data.success)
                    {
                        deletedGroupDiv = '#' + idGroupe;

                        $(deletedGroupDiv).remove();


                    }
                    else
                    {
                        // Handle errors here

                    }
                },
                error: function(jqXHR, textStatus, errorThrown)
                {
                    // Handle errors here

                }
            });
        }

        $(document).ready(function() {
            $('#tableGererGroupe').DataTable({
                responsive: true
            });
        });

    </script>
{% endblock %}






