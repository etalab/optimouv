{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}


    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Gérer vos disciplines </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste de vos disciplines

                     </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed"
                                       id="tableFede">
                                    <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Nom </th>
                                        <th>Date de création</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for discipline in disciplines %}
                                        <tr id="{{ discipline.id }}">
                                            <td> {{ discipline.id }} </td>
                                            <td> {{ discipline.nom }} </td>
                                            <td> {{ discipline.dateCreation.date|date('d/m/Y') }} </td>


                                            <td>
                                                <a href="{{ path('ffbb_discipline_update', {idDiscipline:discipline.id }) }}" class="btn btn-default-rencontre">Editer</a>
                                                <button type="button" name="delete" class="btn btn-consulter-rapport" onclick="deleteDiscipline({{ discipline.id }})">Supprimer</button>

                                            </td>


                                        </tr>


                                    {% endfor %}


                                    </tbody>

                                </table>
                                <a href="{{ path('ffbb_discipline_add') }}" class="btn btn-default-rencontre">Ajouter</a>

                            </div>
                        </div>
                        <!-- /.table-responsive -->


                    </div>

                </div>
            </div>
        </div>


    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('#tableFede').DataTable({
                responsive: true,
                "order": [[ 0, "desc" ]]
            });

        });

        function deleteDiscipline(idDiscipline){
            $.ajax({
                url: '/admin/discipline/delete/' +idDiscipline,
                type: 'GET',
                data: null,
                contentType: false,
                dataType : "json",
                processData: false,
                success: function(data, textStatus, jqXHR)
                {
                    console.log(data);
                    if(typeof data.success)
                    {
                        deletedDisciplineDiv = '#' + idDiscipline;

                        $(deletedDisciplineDiv).remove();


                    }
                    else
                    {
                        // Handle errors here

                    }
                },
                error: function(jqXHR, textStatus, errorThrown)
                {
                    // Handle errors here

                }
            });
        }


    </script>
{% endblock %}



