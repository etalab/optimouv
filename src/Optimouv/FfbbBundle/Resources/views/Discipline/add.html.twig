{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

             <div class="row">
                 <div class="bs-example">
                     <ul class="breadcrumb">
                         <li><a href="{{ path('ffbb_accueil_connect') }}">Accueil</a></li>
                         {#<li><a href="{{ path('ffbb_choisir_liste_participants') }}">Choix de listes</a></li>#}
                         {#<li><a href="{{ path('ffbb_choisir_groupe', {'idListe': idListe}) }}">Choix de groupes</a></li>#}
                         {#<li><a href="{{ path('ffbb_gerer_groupe', {'idListe': idListe}) }}">Gestion de groupes</a></li>#}
                         <li class="active">Ajout de fédération</li>
                     </ul>
                 </div>
                 <div class="col-lg-12">
                     <h3 class="page-header">Ajouter une discipline </h3>
                     <hr>
                     <h5 style="text-align: right; font-weight: bold">(* champs obligatoires)</h5>
                 </div>
                 <!-- /.col-lg-12 -->
             </div>
             <!-- /.row -->

             <div class="row">
                 <div class="col-lg-6">
                     <form role="form" action="{{ path('ffbb_federation_add_discipline') }}" method="post">



                         <div class="form-group">
                             <label style="font-weight: bold">Nom *</label>
                             <input class="form-control" name="nom" required>
                         </div>

                         <div class="form-group">
                             <label style="font-weight: bold">Choisir fédération</label>
                             <select class="form-control" name="federation" required>
                                 {% for federation in fede %}
                                     <option value="{{ federation.id }}"> {{ federation.nom }} </option>
                                 {% endfor %}
                             </select>
                         </div>

                         <button type="submit" class="btn btn-info-poule">Enregistrer</button>
                         <a href="javascript:history.back()" class="pull-right btn btn-info-poule ">Annuler</a>
                     </form>

                 </div>


             </div>


         </div>

     {% endblock %}