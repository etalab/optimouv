{% extends '::BOLayout.html.twig' %}

     {% block pagewrapper %}

         <div id="page-wrapper">

             <div class="row">
                 <div class="bs-example">
                     <ul class="breadcrumb">
                         <li><a href="{{ path('administration_panel') }}">Administration</a></li>
                         <li><a href="{{ path('ffbb_rapports') }}">Gestion des rapports </a></li>
                         <li class="active">Renommage de rapports</li>
                     </ul>
                 </div>
                 <div class="col-lg-12">
                     <h3 class="page-header">Editer un rapport </h3>
                     <h5 style="text-align: right; font-weight: bold">(* champs obligatoires)</h5>
                 </div>
                 <!-- /.col-lg-12 -->
             </div>
             <!-- /.row -->

             <div class="row">
                 <div class="col-lg-6">
                     <form role="form" action="{{ path('ffbb_update_rapport') }}" method="post">



                         <div class="form-group">
                             <label style="font-weight: bold">Nom du rapport *</label>
                             <input class="form-control" name="nom" value="{{ nom }}" required>
                         </div>
                         <input type="hidden" name="idRapport" value="{{ idRapport }}">



                         <button type="submit" class="btn btn-visualiser-rapport">Enregistrer</button>
                         <a href="javascript:history.back()" class="btn  btn-ajouter-reparition ">Annuler</a>
                     </form>

                 </div>


             </div>


         </div>

     {% endblock %}