{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}


    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Gérer vos rapports </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste de vos rapports
                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed" id="tableRapport" >
                                    <thead>
                                    <tr>
                                        <th>Identifiant du rapport</th>
                                        <th>Nom du rapport</th>
                                        <th>Type du rapport</th>
                                        <th>Date de création</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>


                                    <tbody>

                                    {%  for infoRapport in infoRapports %}
                                        <tr id="{{ infoRapport.id }}">

                                            <td> {{ infoRapport.id }} </td>
                                            <td> {{ infoRapport.nom }} </td>
                                            <td> {{ infoRapport.typeAction }} </td>
                                            <td> {{ infoRapport.dateCreation.date|date('d/m/Y') }} </td>
                                            <td>
                                                <button type="submit" class="btn btn-info">Rejouer</button> |
                                                <button type="submit" class="btn btn-info">Exporter</button>
                                            </td>

                                        </tr>


                                    {%  endfor %}




                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.table-responsive -->



                    </div>

                </div>
            </div>
        </div>





    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() {
            $('#tableRapport').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}



