{% extends '::BOLayout.html.twig' %}

{% block pagewrapper %}


    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Gérer vos rapports </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste de vos rapports
                    </div>

                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div class="span3">
                                <table class="table table-striped table-hover table-bordered table-fixed" id="tableRapport" >
                                    <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Nom du rapport</th>
                                        <th>Type du rapport</th>
                                        <th>Date de création</th>
                                        <th>Statut</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>


                                    <tbody>

                                    {%  for infoRapport in infoRapports %}
                                        <tr id="{{ infoRapport.id }}">

                                            <td> {{ loop.index }} </td>
                                            <td> {{ infoRapport.nom }} </td>
                                            <td> {{ infoRapport.typeAction }} </td>
                                            <td> {{ infoRapport.dateCreation.date|date('d/m/Y') }} </td>

                                            {% if infoRapport.statut  == -1 %}
                                                <td> Erreur </td>
                                            {% elseif infoRapport.statut  == 0 %}
                                                <td> En attente </td>
                                            {% elseif infoRapport.statut == 1 %}
                                                <td> En cours </td>
                                            {% elseif infoRapport.statut  == 2 %}
                                                <td> Succès</td>
                                            {% else %}
                                                <td> Inconnu </td>
                                            {% endif %}


                                            <td>

                                                {%  if (infoRapport.typeAction == "barycentre") or (infoRapport.typeAction == "meilleurLieu")  or (infoRapport.typeAction == "terrainNeutre") %}
                                                    <button id="btn_rejouer_{{ infoRapport.id  }}"  type="submit" class="btn btn-info">Consulter</button>

                                                {% elseif (infoRapport.typeAction == "exclusion") %}

                                                    <form action="{{ path('ffbb_exclusion', {'idGroupe':infoRapport.idGroupe}) }}" method="POST">
                                                        <button id="btn_rejouer_{{ infoRapport.id  }}"  type="submit" class="btn btn-info">Consulter</button>
                                                        <input name="valeurExclusion" id="valeurExclusion_{{ infoRapport.id }}" type="hidden" value={{ infoRapport.valeurExclusion }}>
                                                    </form>
                                                {% else %}
                                                    <button id="btn_rejouer_{{ infoRapport.id  }}"  type="button" class="btn btn-info">Consulter</button>

                                                {% endif %}

                                                
                                            </td>

                                        </tr>


                                    {%  endfor %}




                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.table-responsive -->



                    </div>

                </div>
            </div>
        </div>





    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() {
            $('#tableRapport').DataTable({
                responsive: true
            });


            // Action javascript pour le bouton rejour de chaque rapport
            {% for infoRapport in infoRapports %}

                $("#btn_rejouer_{{  infoRapport.id }}" ).click(function(){
                    var id = {{ infoRapport.id }};
                    var idGroupe = {{ infoRapport.idGroupe }};
                    var typeAction = "{{ infoRapport.typeAction }}";
                    var valeurExclusion = {{  infoRapport.valeurExclusion }};

//                    console.log("id: " + id);
//                    console.log("idGroupe: " + idGroupe);
//                    console.log("typeAction: " + typeAction);
//                    console.log("valeurExclusion: " + valeurExclusion);

                    if(typeAction == "barycentre"){
                        window.location.href = "{{ path('ffbb_barycentre', {'idGroupe':infoRapport.idGroupe}) }}";
                    }
                    else if(typeAction == "meilleurLieu"){
                        window.location.href = "{{ path('ffbb_rencontres', {'idGroupe':infoRapport.idGroupe}) }}";
                    }
                    else if(typeAction == "terrainNeutre"){
                        window.location.href = "{{ path('ffbb_terrain', {'idGroupe':infoRapport.idGroupe}) }}";

                    }

                });

            {% endfor %}


        });
    </script>
{% endblock %}



